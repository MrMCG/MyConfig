#
# ~/.bash_custom
# markg custom bash config
#

set -o vi

# ----------  
#  Alias
# ----------  

alias ls='ls --color=auto'
alias ll='ls -l'
alias cl='clear'
alias grep='grep --colour=always --line-number'

# ----------  
#  Exports
# ----------  

export PS1_OLD='[\u@\h \W]\$ '
export PS1="\[$(tput bold)\][\[$(tput sgr0)\] \[$(tput bold)\]\[$(tput sgr0)\]\[\033[38;5;63m\]\u\[$(tput sgr0)\]\[$(tput sgr0)\]\[\033[38;5;15m\]@\[$(tput bold)\]\[$(tput sgr0)\]\[\033[38;5;10m\]\h\[$(tput sgr0)\]\[$(tput sgr0)\]\[\033[38;5;15m\] \W\[$(tput bold)\]]\[$(tput sgr0)\] \[$(tput sgr0)\]"

